<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_notice"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="30"
            android:text="老师工号"
            android:textSize="20dp"
            android:paddingTop="20dp"
            android:textColor="@android:color/holo_blue_light">

        </TextView>
        <EditText
            android:text="020181800"
            android:id="@+id/teacher_number"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_weight="70">

        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="30"
            android:text="课程编号"
            android:textSize="20dp"
            android:paddingTop="20dp"
            android:textColor="@android:color/holo_blue_light">

        </TextView>
        <EditText
            android:text="02018180001"
            android:id="@+id/course_number"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_weight="70">

        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="30"
            android:text="班级编号"
            android:textSize="20dp"
            android:paddingTop="20dp"
            android:textColor="@android:color/holo_blue_light">

        </TextView>
        <EditText
            android:text="1806"
            android:id="@+id/class_name"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_weight="70">

        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="30"
            android:text="通知编号"
            android:textSize="20dp"
            android:paddingTop="20dp"
            android:textColor="@android:color/holo_blue_light">

        </TextView>
        <EditText
            android:text="02018180001"
            android:id="@+id/notice_number"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_weight="70">

        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="200dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="通知内容"
            android:textSize="20dp"
            android:paddingTop="20dp"
            android:textColor="@android:color/holo_blue_light">

        </TextView>
        <EditText
            android:text="02018180001"
            android:id="@+id/notice_context"
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:layout_weight="70"
            android:lines="5"
            android:gravity="left|top">

        </EditText>
    </LinearLayout>
    <Button
        android:id="@+id/notice_add"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="确认添加"
        android:layout_marginTop="20dp">

    </Button>
    <TextView
        android:id="@+id/warn"
        android:layout_width="410dp"
        android:layout_height="50dp"
        android:textColor="@android:color/holo_red_light"
        android:textSize="15dp">

    </TextView>

</LinearLayout>