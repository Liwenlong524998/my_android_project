<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".leave"
    android:orientation="vertical"
    android:id="@+id/leave_linear">
    <TextView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="请假"
        android:textSize="40dp"
        android:layout_marginTop="30dp"
        android:textColor="#3F51B5"
        android:layout_marginLeft="110dp"
        android:paddingLeft="50dp">
    </TextView>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/student_leave_id"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="学号："
            android:paddingLeft="50dp"
            android:layout_weight="40"
            android:textSize="20dp"

            >
        </TextView>
        <EditText
            android:id="@+id/qingjia_xuehao"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:textSize="20dp"
            android:layout_weight="60">

        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/student_leave_name"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="姓名："
            android:paddingLeft="50dp"
            android:layout_weight="40"
            android:textSize="20dp"
            >
        </TextView>
        <EditText
            android:id="@+id/xingming"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:textSize="20dp"
            android:layout_weight="60">

        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/reason"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="原因："
            android:paddingLeft="50dp"
            android:layout_weight="40"
            android:textSize="20dp"
            >
        </TextView>
        <EditText
            android:id="@+id/yuanyin"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:textSize="20dp"
            android:layout_weight="60">

        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/my_class"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="班级："
            android:paddingLeft="50dp"
            android:layout_weight="40"
            android:textSize="20dp"
            >
        </TextView>
        <EditText
            android:id="@+id/banji"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:textSize="20dp"
            android:layout_weight="60">
        </EditText>
    </LinearLayout>
    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="30dp"
        >
        <RadioButton
            android:id="@+id/student"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="同意"
            android:textSize="20dp">
        </RadioButton>
        <RadioButton
            android:id="@+id/teacher"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="不同意"
            android:textSize="20dp"></RadioButton>
    </RadioGroup>
    <Button
        android:id="@+id/tijiao"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:text="提交"
        android:textSize="20dp"
        android:layout_marginLeft="150dp">
    </Button>
    <TextView
        android:id="@+id/warn"
        android:layout_width="410dp"
        android:layout_height="50dp"
        android:text=""
        android:textSize="30dp"
        android:textColor="@android:color/holo_red_light"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">

    </TextView>

</LinearLayout>