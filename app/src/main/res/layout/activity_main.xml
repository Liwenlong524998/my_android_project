<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="230dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="100dp"
        android:layout_height="wrap_content"
        android:textColor="#3F51B5"
        android:text="欢迎来到家校助手"
        android:textSize="25dp"
         />
    <TextView
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:layout_marginLeft="150dp"
        android:textColor="#3F51B5"
        android:text="请登录！"
        android:textSize="25dp">

    </TextView>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp">
        <TextView

            android:text="      用户名"
            android:textSize="20dp"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_weight="40"
            android:textColor="#3F51B5"></TextView>
        <EditText
            android:id="@+id/edit1"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:autoSizeMaxTextSize="40dp"
            android:textSize="20dp"
            android:text="20181800"
            android:layout_weight="50"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center"
            android:text="        密码"
            android:textSize="20dp"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_weight="40"
            android:layout_marginTop="25dp"
            android:textColor="#3F51B5"
            />
        <EditText
            android:id="@+id/edit2"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:autoSizeMaxTextSize="40dp"
            android:textSize="20dp"
            android:text="123"
            android:layout_weight="50"
            android:layout_marginTop="25dp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/warn"
        android:layout_width="200dp"
        android:layout_height="50dp"
       android:textSize="20dp"
        android:textColor="@android:color/holo_red_light">

    </TextView>

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="100dp"
        >
        <RadioButton
            android:id="@+id/student"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="学生"
            android:textSize="20dp">
        </RadioButton>
        <RadioButton
            android:id="@+id/teacher"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="老师"
            android:textSize="20dp"></RadioButton>
        <RadioButton
            android:id="@+id/parent"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="家长"
            android:textSize="20dp"></RadioButton>
    </RadioGroup>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp">
        <Button
            android:id="@+id/button1"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="登录"
            android:textSize="20dp"
            android:layout_marginLeft="100dp"></Button>
        <Button
            android:id="@+id/register"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="注册"
            android:textSize="20dp"
            android:layout_marginRight="80dp" ></Button>

    </LinearLayout>


</LinearLayout>