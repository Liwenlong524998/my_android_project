<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".parent_register"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textSize="30dp"
        android:textColor="#3F51B5"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="30dp">
    </TextView>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/parent_id"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="账号："
            android:paddingLeft="50dp"
            android:layout_weight="40"
            android:textSize="20dp"
            >
        </TextView>
        <EditText
            android:id="@+id/zhanghao"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:textSize="20dp"
            android:text="120181800"
            android:layout_weight="60">

        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/pssword"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="密码："
            android:paddingLeft="50dp"
            android:layout_weight="40"
            android:textSize="20dp"
            >
        </TextView>
        <EditText
            android:id="@+id/mima"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:textSize="20dp"
            android:text="123"
            android:layout_weight="60">

        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/name"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="姓名："
            android:paddingLeft="50dp"
            android:layout_weight="40"
            android:textSize="20dp"
            >
        </TextView>
        <EditText
            android:id="@+id/xingming"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:textSize="20dp"
            android:text="liwenlong"
            android:layout_weight="60"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/child"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="学生："
            android:paddingLeft="50dp"
            android:layout_weight="40"
            android:textSize="20dp"
            >
        </TextView>
        <EditText
            android:id="@+id/xuesheng"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:textSize="20dp"
            android:text="20181800"
            android:layout_weight="60"
            android:hint="请输入您孩子的账号"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/civil"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="电话："
            android:paddingLeft="50dp"
            android:layout_weight="40"
            android:textSize="20dp"
            >
        </TextView>
        <EditText
            android:id="@+id/dianhua"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:textSize="20dp"
            android:text="123456"
            android:layout_weight="60"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp">
        <Button
            android:id="@+id/register"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="注册"
            android:textSize="20dp"
            android:paddingBottom="0dp"
            android:paddingTop="5dp"
            android:layout_marginLeft="90dp">
        </Button>
        <Button
            android:id="@+id/go_login"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="登录"
            android:textSize="20dp"
            android:paddingBottom="0dp"
            android:paddingTop="5dp"
            android:layout_marginRight="90dp">
        </Button>
    </LinearLayout>
    <TextView
        android:id="@+id/warn"
        android:layout_width="410dp"
        android:layout_height="40dp"
        android:text=""
        android:textSize="30dp"
        android:textColor="@android:color/holo_red_light"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">

    </TextView>
</LinearLayout>